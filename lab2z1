from typing import Any

class Node:
    def __init__(self, value: Any):
        self.value = value
        self.next = None


class LinkedList:
    def __init__(self):
        self.head = None

    def push(self, value: Any) -> None:
        new_node = Node(value)
        new_node.next = self.head
        self.head = new_node


    def append(self, value: Any) -> None:
        newNode = Node(value)
        if (self.head):
            current = self.head
            while (current.next):
                current = current.next
            current.next = newNode
        else:
            self.head = newNode


    def printLinkedList(self):
        current = self.head
        print("--------------------------")
        while (current):
            print (current.value)
            current = current.next
        print("--------------------------")

    def node(self, at: int) -> Node:
        current = self.head
        licznik = 0

        while (current):
            if (licznik == at):
                return current.value
            licznik += 1
            current = current.next


    def insert(self, value: Any, after: Node) -> None:
        new_node = Node(value)
        if (after == -1):
            new_node.next = self.head
            self.head = new_node
        else:
            temp = self.head
            for x in range(0, after):
                if(temp != None):
                    temp = temp.next
            if (temp != None):
                new_node.next = temp.next
                temp.next = new_node

    def pop(self) -> Any:
        element = self.head
        self.head = self.head.next
        temp = element
        element = None
        return temp.value



list = LinkedList()

list.push(1)
list.append(2)
list.push(3)
list.append(4)

list.printLinkedList()
print("Na podanym miejscu jest: " +  str(list.node(2)))

middle_node = list.node(at=1)
list.insert(-99, middle_node)

list.printLinkedList()

print("UsuniÄ™to: " + str(list.pop()))

list.printLinkedList()
